<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".filelist.FileListActivity" android:background="#fff">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="left|center_vertical" android:layout_width="match_parent" android:layout_height="48px"
        >
            <Button
                    android:text="ファイル"
                    android:id="@+id/fileButton"
                    android:background="#1979CA" android:textSize="12sp" android:textColor="#fff"
                    android:layout_height="match_parent" android:textAlignment="center" android:layout_width="120px"/>
            <Button
                    android:text="ホーム"
                    android:layout_height="match_parent" android:id="@+id/homeButton" android:layout_width="120px"
                    android:background="#fff" android:textAlignment="center" android:textSize="12sp"
                    android:textColor="#616161"/>
            <Button
                    android:text="共有"
                    android:layout_height="match_parent" android:id="@+id/shareButton" android:layout_width="120px"
                    android:background="#fff" android:textAlignment="center" android:textSize="12sp"
                    android:textColor="#616161"/>
            <Button
                    android:text="表示"
                    android:layout_height="match_parent" android:id="@+id/displayButton" android:layout_width="120px"
                    android:background="#fff" android:textAlignment="center" android:textSize="12sp"
                    android:textColor="#616161"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:id="@+id/view" android:layout_height="1px" android:background="@color/default_gray"
                android:layout_alignParentStart="true" android:layout_alignParentBottom="true"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageButton
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/ic_back"
                    android:id="@+id/backButton"
                    android:background="#000000ff" android:layout_margin="4dp" android:layout_height="40px"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/ic_forward"
                    android:id="@+id/goButton" android:background="#000000ff" android:layout_margin="4dp"
                    android:layout_height="40px"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/ic_arrow_upward_black_24dp"
                    android:id="@+id/parentButton" android:background="#000000ff" android:layout_margin="4dp"
                    android:paddingLeft="8dp" android:layout_height="40px" android:paddingTop="2dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/pathField" android:layout_weight="1" android:background="@drawable/stroke"
                    android:drawableLeft="@drawable/ic_folder"
                    android:textSize="12sp" android:padding="2dp" android:text="/storage/0/emulated/"
                    android:layout_height="40px" android:textColor="@color/text_color"
                    android:layout_marginBottom="4dp" android:layout_marginLeft="4dp" android:layout_marginTop="4dp"/>
            <ImageButton
                    android:src="@drawable/ic_reload"
                    android:id="@+id/reloadButton"
                    android:background="@drawable/stroke_nofocus" android:layout_height="40px"
                    android:layout_width="40px"
                    android:layout_marginBottom="4dp" android:layout_marginRight="4dp" android:layout_marginTop="4dp"/>
            <EditText
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/searchField" android:layout_weight="1" android:background="@drawable/stroke"
                    android:layout_margin="4dp" android:layout_width="40dp"
                    android:drawableRight="@drawable/ic_search" android:hint="検索" android:textSize="12sp"
                    android:padding="2dp" android:textColorHint="@color/default_gray" android:layout_height="40px"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_width="0dp"
                    android:layout_marginLeft="8dp" android:id="@+id/subFolderArea" android:layout_marginRight="8dp">
                <Space
                        android:layout_height="20dp" android:layout_weight="1" android:layout_width="match_parent"/>
                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/subFileList"
                        android:divider="@null"/>
            </LinearLayout>
            <View
                    android:layout_height="wrap_content" android:id="@+id/view2" android:layout_width="1px"
                    android:background="#D6D6D6"/>
            <android.support.v7.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/mainFileList" android:layout_weight="3"
                    android:background="#fff" android:scrollbars="horizontal|vertical" android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/homeTabLayout" android:visibility="gone"
            android:elevation="4dp">
        <Space
                android:layout_width="match_parent"
                android:layout_height="48px"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@color/tabColor">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tabClipboard">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:gravity="center_horizontal"
                                    android:paddingLeft="4dp" android:layout_weight="1">
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_bookmark"
                                        android:id="@+id/imageView5" android:padding="4dp"/>
                                <TextView
                                        android:text="クイック アクセス\nにピン留めする"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/textView13"
                                        android:textSize="10sp" android:textAlignment="center"/>
                            </LinearLayout>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:paddingLeft="4dp"
                                    android:layout_weight="1">
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_compare"
                                        android:id="@+id/imageView6" android:padding="4dp"/>
                                <TextView
                                        android:text="コピー"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/textView15"
                                        android:textAlignment="center" android:textSize="10sp"/>
                            </LinearLayout>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:paddingLeft="4dp"
                                    android:paddingRight="4dp" android:layout_weight="1">
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_paste"
                                        android:id="@+id/imageView7" android:padding="4dp"/>
                                <TextView
                                        android:text="ペースト"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/textView16"
                                        android:textSize="10sp"/>
                            </LinearLayout>
                            <View
                                    android:id="@+id/view3"
                                    android:layout_width="1px" android:layout_height="60dp"
                                    android:background="@color/default_gray" android:layout_weight="1"/>
                        </LinearLayout>
                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="8dp"/>
                        <TextView
                                android:text="クリップボード"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView14"
                                android:textSize="10sp"
                                android:textAlignment="center"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tabClean">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:paddingLeft="4dp"
                            >
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_delete"
                                        android:id="@+id/imageView8" android:padding="4dp"/>
                                <TextView
                                        android:text="削除"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/textView17"
                                        android:textSize="10sp" android:textAlignment="center"/>
                            </LinearLayout>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:paddingLeft="4dp"
                                    android:paddingRight="4dp">
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_changename"
                                        android:id="@+id/imageView9" android:padding="4dp"/>
                                <TextView
                                        android:text="名前の\n変更"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/textView19"
                                        android:textAlignment="center" android:textSize="10sp"/>
                            </LinearLayout>
                            <View
                                    android:id="@+id/view4"
                                    android:layout_width="1px" android:layout_height="60dp"
                                    android:background="@color/default_gray" android:layout_weight="1"/>
                        </LinearLayout>
                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="8dp"/>
                        <TextView
                                android:text="整理"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView18"
                                android:textAlignment="center" android:textSize="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tabNew">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:layout_weight="1"
                                    android:paddingLeft="4dp" android:paddingRight="4dp">
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_create_24"
                                        android:id="@+id/imageView10" android:padding="4dp"/>
                                <TextView
                                        android:text="新しい\nフォルダー"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/textView21"
                                        android:textSize="10sp" android:textAlignment="center"/>
                            </LinearLayout>
                            <View
                                    android:id="@+id/view5"
                                    android:layout_width="1px" android:layout_height="60dp"
                                    android:background="@color/default_gray" android:layout_weight="1"/>
                        </LinearLayout>
                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="8dp" android:layout_weight="1"/>
                        <TextView
                                android:text="新規"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView20"
                                android:layout_weight="1" android:textAlignment="center" android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>