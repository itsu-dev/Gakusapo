<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/dr_timetable_background">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#5f000000" android:id="@+id/timetableTable">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="4dp">
            <TextView
                    android:text="月"
                    android:layout_height="wrap_content" android:id="@+id/monday" android:layout_width="0dp"
                    android:layout_weight="1" android:textAlignment="center" android:textColor="#fff"/>
            <TextView
                    android:text="火"
                    android:layout_height="wrap_content" android:id="@+id/tuesday" android:layout_weight="1"
                    android:layout_width="0dp" android:textAlignment="center" android:textColor="#fff"/>
            <TextView
                    android:text="水"
                    android:layout_height="wrap_content" android:id="@+id/wednesday" android:layout_weight="1"
                    android:layout_width="0dp" android:textAlignment="center" android:textColor="#fff"/>
            <TextView
                    android:text="木"
                    android:layout_height="wrap_content" android:id="@+id/thursday" android:layout_width="0dp"
                    android:layout_weight="1" android:textAlignment="center" android:textColor="#fff"/>
            <TextView
                    android:text="金"
                    android:layout_height="wrap_content" android:id="@+id/friday" android:textAlignment="center"
                    android:layout_weight="1" android:layout_width="0dp" android:textColor="#fff"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>