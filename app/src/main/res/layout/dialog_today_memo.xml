<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="メモ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView17" android:padding="16dp"
                android:background="@color/colorPrimary" android:textColor="#fff"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textPersonName"
                android:ems="10"
                android:id="@+id/dialogMemoField" android:hint="@string/please_input" android:layout_margin="16dp"/>
        <Button
                android:text="@string/close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/memoCloseButton"
                style="@style/Widget.AppCompat.Button.Colored" android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
    </LinearLayout>
</ScrollView>