<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.WebActivity" android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/colorPrimary" android:padding="8dp">
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <Button
                android:layout_width="32dp"
                android:id="@+id/webCloseButton"
                android:background="@drawable/ic_close" android:layout_height="32dp"/>
    </LinearLayout>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/webWebView"/>
</LinearLayout>