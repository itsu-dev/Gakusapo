<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center"
              android:layout_marginBottom="8dp" android:layout_marginRight="8dp" android:layout_marginLeft="8dp">

    <ImageView
            app:srcCompat="@drawable/ic_train" android:id="@+id/imageView"
            android:layout_width="48dp" android:layout_height="match_parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/trainDetailTrainName"
                android:textSize="18sp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/trainDetailCompany"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" android:layout_marginBottom="8dp"/>
    </LinearLayout>
</LinearLayout>