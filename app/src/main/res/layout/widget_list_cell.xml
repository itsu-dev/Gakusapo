<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="wrap_content"
              android:layout_width="match_parent" android:orientation="horizontal"
              android:gravity="center_vertical">

    <ImageView
            app:srcCompat="@color/subjectDarkBlue" android:id="@+id/widgetTimetableCellColor"
            android:layout_width="8dp" android:layout_height="48dp"/>
    <TextView
            android:layout_height="match_parent" android:id="@+id/widgetTimetableCellTime"
            android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="24dp"
            android:gravity="center_vertical" android:textColor="@color/default_gray_dark"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/widgetTimetableCellSubject"
                android:gravity="center_vertical"
                android:textSize="18sp" android:textColor="@color/browser_actions_bg_grey"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/widgetTimetableCellClassName"
                android:textColor="@color/default_gray_dark"/>
    </LinearLayout>
</LinearLayout>