<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:background="@color/default_gray_dark"
                                    app:cardCornerRadius="8dp" android:layout_height="96dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/default_gray_dark"
            android:id="@+id/timetableCellLayout"
    >
        <TextView
                android:layout_width="match_parent"
                android:id="@+id/timetableSubject" android:textAlignment="center" android:layout_height="0dp"
                android:layout_weight="2" android:gravity="center"/>
        <View
                android:layout_width="match_parent"
                android:id="@+id/view" android:layout_height="1dp" android:layout_margin="4dp"
                android:background="@color/default_gray"/>
        <TextView
                android:layout_width="match_parent"
                android:id="@+id/timetableClass" android:layout_height="0dp" android:layout_weight="1"
                android:textAlignment="center" android:gravity="center" android:textSize="12sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>